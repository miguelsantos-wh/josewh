; ==================================
;  ASGI
; ==================================

[fcgi-program:asgi]
# Var environment para leer las variables entorno de produccion de nuestro archivo .env ubicado en => /home/DjangoBase_Server/josewh/.config/environment/production
environment=josewh_ENVIRON=production

# TCP socket used by Nginx backend upstream.
socket=tcp://localhost:8009

# Directory where your site's project files are located
directory=/home/DjangoBase_Server/josewh/

# Each process needs to have a separate socket file, so we use process_num
# Make sure to update "mysite.asgi" to match your project name
command=/var/waps/entornos/josewh/bin/daphne -u /run/daphne/daphne%(process_num)d.sock --endpoint fd:fileno=0 --access-log - --proxy-headers josewh.core.asgi:application

# Number of processes to startup, roughly the number of CPUs you have
numprocs=4

# Give each process a unique name so they can be told apart
# process_name=asgid
process_name=asgi%(process_num)d

# Automatically start and recover processes
autostart=true
autorestart=true

# Choose where you want your log to go
stdout_logfile=/home/DjangoBase_Server/josewh/.logs/asgi/asgi.log
redirect_stderr=true